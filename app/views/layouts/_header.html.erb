<header>
<nav  class="navbar navbar-default navbar-fixed-top">
  <div class="container-fluid">
    <div class="navbar-header">
      <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#collapse_me">
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <div class="navbar-brand"><span id="title"><%= link_to "Biblion", root_url %></span>
        <span id="fulltitle" class="secondary-title", style="display:none;">
          <% if yield(:title).length > 40 %>
          <%= yield(:title)[0,35]%>...
          <% else %>
          <%= yield(:title) %>
          <% end %>
        </span>
        <span id="shorttitle" class="secondary-title", style="display:none;">
          <% if yield(:title).length > 16 %>
          <%= yield(:title).partition(" ").first%>...
          <% else %>
          <%= yield(:title) %>
          <% end %>
        </span>
        <script>
        if ( $(window).width() < 768 && $(window).width() > 450 || $(window).width() > 1000) {
          document.getElementById("shorttitle").style.display = "none";
          document.getElementById("fulltitle").style.display = "";
        }
        else {
          document.getElementById("fulltitle").style.display = "none";
          document.getElementById("shorttitle").style.display = "";
        }
        </script>
        </div>
    </div>
    <div class="collapse navbar-collapse" id="collapse_me">
      <ul class="nav navbar-nav">
        <ul class="list-form">
        <li>
            <%= form_for(Book.new, url: {controller: "books", action: "search_book"}, method: :post) do |f| %>
            <%= f.text_field :title, value: @title, placeholder: "Titel" %>
        </li>
        <li>
            <%= f.text_field :author, value: @author, placeholder: "Författare" %>
        </li>
        <li>
            <%= f.text_field :location, value: @location, placeholder: "Stad" %>
        </li>
        <li>
          <%= f.submit("") %>
          <% end %>
        </li>
      </ul>
      </ul>
      <ul class="nav navbar-nav navbar-right">
        <li class="dropdown">
          <% if !logged_in? %>
          <%= link_to 'Logga in', login_path %>

          <% elsif current_user.admin? %>
          <a class="dropdown-toggle" data-toggle="dropdown" href="#">Admin
            <span class="caret"></span></a>
            <ul class="dropdown-menu">
              <li><%= link_to 'Lägg till en bok', books_add_path %></li>
              <li><%= link_to 'Profil', current_user %></li>
              <li><%= link_to 'Inställningar', edit_user_path(current_user) %></li>
              <li><%= link_to 'Användare', users_path %></li>
              <li>
                <%= link_to "Logga ut", logout_path, method: :delete %>
              </li>
            </ul>
          <% else %>
            <a class="dropdown-toggle" data-toggle="dropdown" href="#">Mitt konto
              <span class="caret"></span></a>
              <ul class="dropdown-menu">
                <li><%= link_to 'Lägg till en bok', books_add_path %></li>
                <li><%= link_to 'Profil', current_user %></li>
                <li><%= link_to 'Inställningar', edit_user_path(current_user) %></li>
                <li>
                  <%= link_to "Logga ut", logout_path, method: :delete %>
                </li>
              </ul>
          <% end %>
        </li>
      </ul>
    </div>
  </div>
</nav>

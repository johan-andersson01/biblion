<div class="signup_form">
<%= form_for(:session, url: login_path) do |f| %>

  <%= f.label :email %>
  <%= f.email_field :email, class: 'form-control' %>

  <%= f.label :password, "Lösenord" %>
  <%= link_to "(glömt lösenordet?)", new_password_reset_path %>
  <%= f.password_field :password, class: 'form-control' %>

  <%= f.submit "Logga in", class: "btn btn-primary" %>
  <div class="checkbox-field">
    <%= f.label :remember_me, "Kom ihåg mig på den här enheten", class: "checkbox-inline"%>
    <%= f.check_box :remember_me, class: "checkbox" %>
  </div>
  <%= link_to 'Registrera dig här!', signup_path %>
<% end %>
</div>
<%= provide(:title, 'Lägg till en ny bok') %>
<h1><%= yield(:title) %></h1>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <div class="signup_form">
      <%= form_for(@book, url: new_book_path) do |f| %>
        <%= f.label :title, "Boktitel" %>
        <%= f.text_field :title %>
        <%= f.label :author, "Författare" %>
        <%= f.text_field :author %>
        <%= f.label :year, "Utgivningsår" %>
        <%= f.text_field :year %>
        <%= f.label :description, "Beskrivning" %>
        <%= f.text_field :description %>
        <%= f.label :user_description, "Varför du vill ge bort boken?" %>
        <%= f.text_field :user_description %>
        <%= f.label :location, "I vilken stad kan boken hämtas?" %>
        <%= f.text_field :location %>
        <%= f.submit "Lägg till boken!", class: "btn btn-primary" %>
      <% end %>
  </div>
  </div>
</div>

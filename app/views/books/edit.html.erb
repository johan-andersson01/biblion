<%= provide(:title, 'Redigera bokinformation') %>
<h1><%= yield(:title) %></h1>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <div class="signup_form">
      <%= form_for(@book) do |f| %>
        <%= render 'shared/book_error_messages' %>
        <%= f.label :title, "Boktitel" %>
        <%= f.text_field :title %>
        <%= f.label :author, "Författare" %>
        <%= f.text_field :author %>
        <%= f.label :language, "Språk" %>
        <%= f.text_field :language %>
        <%= f.label :quality, "Skick" %>
        <%= f.select :quality, options_for_select(['Nyskick', 'Använd', 'Sliten', 'Mycket sliten']) %>
        <%= f.label :genre, "Genre" %>
        <%= f.select :genre, options_for_select(['', 'Fiktion', 'Fakta',
            'Facklitteratur', 'Barnbok']) %>
        <%= f.label :year, "Utgivningsår" %>
        <%= f.date_select "year", include_blank: true, start_year: Time.now.year, end_year: Time.now.year - 200, order: [:year]%>
        <%= f.label :cover, "URL till bokens omslag eller till en bild av boken" %>
        <%= f.text_field :cover %>
        <%= f.label :available, class: "checkbox inline" do %>
          <%= f.check_box :available, id: "checkbox" %>
          <% end %>
        <%= f.label :description, "Beskrivning" %>
        <%= f.text_field :description %>
        <%= f.submit "Bekräfta ändringar", class: "btn btn-primary" %>
      <% end %>
  </div>
  </div>
</div>

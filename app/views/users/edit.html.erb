<% provide(:title, "Inställningar") %>
<h1>Inställningar</h1>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <div class="signup_form">
      <%= form_for(@user) do |f| %>
        <%= render 'shared/error_messages' %>
        <%= f.label :name, "Namn" %>
        <%= f.text_field :name, :readonly => true, class: "non-editable" %>
        <%= f.label :telephone, "Mobilnummer" %>
        <%= f.text_field :telephone %>
        <%= f.label :email, "E-mail" %>
        <%= f.text_field :email %>
        <%= f.label :password, "Nytt lösenord" %>
        <%= f.password_field :password %>
        <%= f.label :password_confirmation, "Bekräfta ditt nya lösenord" %>
        <%= f.password_field :password_confirmation %>

        <%= f.submit "Spara ändringar", class: "btn btn-primary" %>
      <% end %>
    </div>
    <div class="signup_form delete">
      <%= form_for(@user) do |f| %>

        <button type="button" class="btn btn-primary btn-danger" data-toggle="collapse" data-target=".collapse">Radera konto
          <span class="caret"></span></button>
          <div class="collapse">
            <%= f.label :password, "Ange lösenord" %>
            <%= f.password_field :password %>
            <%= f.label :password_confirmation, "Bekräfta lösenord" %>
            <%= f.password_field :password_confirmation %>
            <%= f.submit "Radera mitt konto", class: "btn btn-primary btn-danger" %>
          </div>
      </div>
      <% end %>
    </div>
  </div>
</div>

<%= provide(:title, 'Registrera dig') %>
<%if !logged_in? %>
<h1><%= yield(:title) %></h1>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <div class="signup_form">
      <div class="field">

        </div>
      <%= form_for(@user, url: signup_path) do |f| %>
        <%= render 'shared/error_messages' %>
        <%= f.label :name, "Förnamn eller alias" %>
        <p>Synligt för användare.</p>
        <%= f.text_field :name %>
        <%= f.label :landscape, "Län" %>
        <p>Synligt för användare.</p>
        <%= f.select :landscape, CS.states(:se).values %>
        <%= f.label :location, "Ort" %>
        <p>Synligt för användare.</p>
        <%= f.text_field :location %>
        <%= f.label :telephone, "Mobilnummer" %>
        <p>Endast synligt för användare som gör en förfrågan om att få en bok av dig.</p>
        <%= f.text_field :telephone %>
        <%= f.label :email, "E-mail" %>
        <p>Ej synligt för andra användare.</p>
        <%= f.text_field :email %>
        <%= f.label :password, "Lösenord" %>
        <%= f.password_field :password %>
        <%= f.label :password_confirmation, "Bekräfta ditt lösenord" %>
        <%= f.password_field :password_confirmation %>
        <%= f.label :terms_of_service, class: "checkbox inline" do %>
          <%= f.check_box :terms_of_service, id: "checkbox" %>
          <span>Genom att registrera mig, godkänner jag Biblions <%= link_to 'användaravtal', terms_path, :target => "_blank", :rel => "noopener"  %></span>
          <% end %>
        <%= f.submit "Skapa konto!", class: "btn btn-primary" %>
      <% end %>
  </div>
  </div>
</div>
<% else %>
<h1>Du är redan inloggad</h1>
<% end %>

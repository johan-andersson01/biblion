<%= provide(:title, 'Registrera dig') %>
<h1><%= yield(:title) %></h1>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <div class="signup_form">
      <%= form_for(@user, url: signup_path) do |f| %>
        <%= render 'shared/error_messages' %>
        <%= f.label :name, "Namn" %>
        <%= f.text_field :name %>
        <%= f.label :telephone, "Mobilnummer" %>
        <%= f.text_field :telephone %>
        <%= f.label :email, "E-mail" %>
        <%= f.text_field :email %>
        <%= f.label :password, "Lösenord" %>
        <%= f.password_field :password %>
        <%= f.label :password_confirmation, "Bekräfta ditt lösenord" %>
        <%= f.password_field :password_confirmation %>
        <div class="inline">
        <%= label_tag :terms_of_service, "Jag har läst och förstått användaravtalet. [broken]" %>
        <%= check_box_tag :terms_of_service %>
        </div>
        <%= f.submit "Skapa konto!", class: "btn btn-priary" %>
      <% end %>
  </div>
  </div>
</div>
